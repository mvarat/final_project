<div class="sign-up-form">
<h3>sign up</h3>

<%= form_for @user do |f| %>

  <%= f.label :username, "USERNAME" %>
  <br>
  <%= f.text_field :username, class: 'sign-up-input' %>
  <br>
  <%= f.label :password, "PASSWORD" %>
  <br>
  <%= f.password_field :password, class: 'sign-up-input'%>
  <br>
  <%= f.label :password_confirmation, "PASSWORD CONFIRMATION" %>
  <br>
  <%= f.password_field :password_confirmation, class: 'sign-up-input' %>
  <br>
  <%= f.submit "SIGN UP", class: 'clear-btn form-btn' %>
<% end %>
</div>
