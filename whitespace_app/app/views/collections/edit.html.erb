<% if @user.id == @collection.user_id %>

<h3>EDIT COLLECTION</h3>

<h4><%= link_to "DELETE COLLECTION", collection_path(@collection), method: :delete %></h4>

  <%= form_for @collection do |f| %>

    <%= f.label :title, "Item Name" %>
    <%= f.text_field :title%>

    <%= f.label :description %>
    <%= f.text_field :description %>

    <%= f.radio_button :is_private, true %>
    <%= label :is_private, "Private Collection" %>
    <%= f.radio_button :is_private, false %>
    <%= label :is_private, "Public Collection" %>
    <br>
    <%= f.submit %>
    <% end %>

  <% @artworks.each do |artwork| %>
    <img src="<%= artwork.thumbnail %>">
    <p><%= artwork.title %></p>
  
    <h4><%= link_to "X", api_collection_artwork_path(artwork.collection_id, artwork.id), method: :delete %></h4>
    <h6>
      <%= form_tag collection_path(@collection), method: "put" do %>
        <%= hidden_field_tag 'collection[default_image]', artwork.thumbnail %>
        <%= submit_tag "Default" %>
      <% end %>

  </h6>
  <% end %>

<% end %>
