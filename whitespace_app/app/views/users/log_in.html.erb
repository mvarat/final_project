<h2>Log In</h2>

<%= form_tag '/sessions', method: :post do %>
  <%= label_tag :username %>
  <br>
  <%= text_field_tag :username %>
  <br>
  <%= label_tag :password %>
  <br>
  <%= password_field_tag :password %>
  <br>
  <%= submit_tag "Log In" %>
<% end %>
<p>Don't have an account? <%= link_to "Sign Up!", new_user_path %></p>
